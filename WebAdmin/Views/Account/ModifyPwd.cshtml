@model WebAdmin.Models.ModifyPwdViewModel
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>登录名：</label>
                <div class="controls">
                    @User.Identity.Name @Html.Hidden("hidUserName", User.Identity.Name)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>原密码：</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.OldPassword)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>新密码：</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.NewPassword)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">确认密码：</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
                </div>
            </div>

            <div class="control-group">
                @Html.ValidationSummary(false)
            </div>
        </div>
}
