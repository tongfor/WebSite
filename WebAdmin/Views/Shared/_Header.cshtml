@using Common
@using Microsoft.AspNetCore.Mvc;
<div class="navbar-inner">
    <form name="form_logout" method="post" asp-area="" asp-controller="Account" asp-action="Logout">
        <div class="container-fluid">
            <!-- BEGIN LOGO -->
            <a class="brand" href="index.html">
                <img src="/images/logo.png" alt="logo" />
            </a>
            <!-- END LOGO -->
            <!-- BEGIN RESPONSIVE MENU TOGGLER -->
            <a href="javascript:;" class="btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
                <img src="/images/menu-toggler.png" alt="" />
            </a>
            <!-- END RESPONSIVE MENU TOGGLER -->
            <!-- BEGIN TOP NAVIGATION MENU -->
            <ul class="nav pull-right">
                <!-- BEGIN USER LOGIN DROPDOWN -->
                <li class="dropdown user">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img alt="" src="/images/avatar.gif" style="height: 29px;" />
                        @if (User != null && User.Identity.IsAuthenticated)
                    {
                        <span class="username">
                            @User.Identity.Name
                        </span>
                }
                        <i class="icon-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu">

                        <li>
                            <a href="@Url.Action("ModifyPwd", "Account")?TB_iframe=true&height=320&width=500" class="thickbox" title="修改密码"><i class="icon-key"></i> 修改密码</a>
                        </li>
                        <li>
                            @*<a id="logout" href="javascript:if(confirm('确实退出系统吗?'))$('#form_logout').submit();"><i class="icon-signout"></i> 退出系统</a>*@<button type="submit" onclick="javascript:if(confirm('确实退出系统吗?'))$('#form_logout').submit();"><i class="icon-signout"></i> 退出系统</button>
                        </li>
                    </ul>

                </li>
                <!-- END USER LOGIN DROPDOWN -->
            </ul>
            <!-- END TOP NAVIGATION MENU -->
        </div>
    </form>
</div>