@using Microsoft.AspNetCore.Http;

@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/metro.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/style.css" />
        <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui-1.10.1.custom.css" />
        <link rel="stylesheet" href="~/css/admin.main.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/2.3.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/metro.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui-1.10.1.custom.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/admin.main.min.css" asp-append-version="true" />
    </environment>
    @RenderSection("PageSpecificStyleSheetIncludes", required: false)
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "mainForm" }))
    {

        @RenderSection("MainContent", required: false)
        @RenderBody()

        <div style="height:80px;"></div>
        <div class="form-actions navbar-fixed-bottom">
            <button type="submit" id="submit" class="btn blue" style="width:80px"><i class="icon-ok"></i> 提交</button>
            <span id="submitloading" style="display:none;"><img src="~/images/loading.gif" /></span>
            <button type="button" class="btn" id="cancel" style="width:80px">取消</button>
        </div>
    }
    @RenderSection("OtherContent", required: false)

    <!-- BEGIN JAVASCRIPTS -->
    <script type="text/javascript">
        var staticFileRoot = "@Context.Request.GetHostUri()" + "/";
    </script>
    <environment include="Development">
        <script src="~/js/jquery-1.8.3.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <!-- ie8 fixes -->
        <!--[if lt IE 9]>
        <script src="~/js/excanvas.js"></script>
        <script src="~/js/respond.js"></script>
        <![endif]-->
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/jquery-ui/jquery-ui-1.10.1.custom.min.js"></script>
        <script src="~/js/jquery.numeric.js"></script>
        <script src="~/js/jquery.ui.datapicker-zh-CN.js"></script>
        <script src="~/js/admin.edit.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js"
                asp-fallback-src="~/js/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/2.3.1/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <!-- ie8 fixes -->
        <!--[if lt IE 9]>
        <script src="~/js/excanvas.min.js" asp-append-version="true"></script>
        <script src="~/js/respond.min.js" asp-append-version="true"></script>
        <![endif]-->
        <script src="~/lib/jquery-ui/jquery-ui-1.10.1.custom.min.js" asp-append-version="true"></script>
        <script src="~/js/jquery.plugin.min.js" asp-append-version="true"></script>
        <script src="~/js/admin.edit.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("PageSpecificJavascriptIncludes", required: false)
    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>
