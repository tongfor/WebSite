@using Models

@model PagedList<AdminLoginLog>

@{
    ViewBag.Title = "登录日志";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="span4">
        <div>
            <a class="btn red" href="@Url.Action("LoginLogToXls", new { PageIndex=ViewBag.PageIndex })"><i class="icon-white"></i> 导出当前页登录日志</a>
            @*<a class="btn blue thickbox" title='添加分类' href="@Url.Action("Create")?TB_iframe=true&height=500&width=450"><i class="icon-plus icon-white"></i> 新增</a>*@
        </div>
    </div>


    @using (Html.BeginForm("Delete", "AdminLoginLog", FormMethod.Post, new { id = "mainForm" }))
    {
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    @*<th style="width: 8px;">
                            <input type="checkbox" id="checkall" class="group-checkable" />
                        </th>*@
                    <th>
                        用户登录名
                    </th>
                    <th>
                        IP地址
                    </th>
                    <th>
                        城市
                    </th>
                    <th>
                        是否成功
                    </th>
                    <th>
                        时间
                    </th>
                    @*<th style="text-align:center">
                            操作
                        </th>*@
                </tr>
            </thead>
            <tbody>
                @{ if (Model != null)
                    {
                        foreach (var m in Model)
                        {
                            <tr>
                                @*<td>
                                        <input type="checkbox" class="checkboxes" name='ids' value='@m.Id' />
                                    </td>*@
                                <td>
                                    @m.UserName
                                </td>
                                <td>
                                    @m.UserIp
                                </td>
                                <td>
                                    @m.City
                                </td>
                                @if (m.IsSuccess == 0)
                                {
                                    <td>是</td>
                                }
                                else
                                {
                                    <td>否</td>
                                }
                                <td>
                                    @m.LoginTime
                                </td>
                                @*<td style="text-align:center">
                                        <a class="btn mini purple" id="delSingle" title='删除此操作日志' href="javascript:if(confirm('确实要删除该内容吗?'))location='@Url.Action("Delete", new { id = m.Id })'">
                                            <i class="icon-edit"></i>
                                            删除
                                        </a>
                                        <input type="hidden" value="@m.Id" name="id" id="id" />
                                    </td>*@
                            </tr>
                        }
                    }
                    else
                    {

                    }
                }
            </tbody>
        </table>
    }
    <div class="dataTables_paginate paging_bootstrap pagination">
        @await Component.InvokeAsync("Pagination")
    </div>
</div>
